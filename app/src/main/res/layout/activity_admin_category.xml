<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    
    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        >

        <ImageView
            android:id="@+id/dairy"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/dairy">
        </ImageView>

        <ImageView
            android:id="@+id/drinks"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/drinks">
        </ImageView>

        <ImageView
            android:id="@+id/alcohol"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/alcohol">
        </ImageView>

        <ImageView
            android:id="@+id/confection"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/confection">
        </ImageView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="60dp"
        >

        <ImageView
            android:id="@+id/fruits"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/fruits">
        </ImageView>

        <ImageView
            android:id="@+id/vegetables"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/vegetables">
        </ImageView>

        <ImageView
            android:id="@+id/cereal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/cereal">
        </ImageView>

        <ImageView
            android:id="@+id/biscuits"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/biscuits">
        </ImageView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="60dp"
        >

        <ImageView
            android:id="@+id/icecream"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/icecream">
        </ImageView>

        <ImageView
            android:id="@+id/meat"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/meat">
        </ImageView>

        <ImageView
            android:id="@+id/fish"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/fish">
        </ImageView>

        <ImageView
            android:id="@+id/sausage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/sausage">
        </ImageView>

    </LinearLayout>


</RelativeLayout>

